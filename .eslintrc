{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "eol-last": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["error"],
    "max-len": ["error", 140, { "ignoreComments": true }],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
